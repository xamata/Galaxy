
<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        # calls a sting of titles
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .6}
    Button: 
        font_size: dp(30)
        font_name: "fonts/Eurostile.ttf"
        # calls a string of titles so that they are different text from Start to Replay
        text: root.parent.menu_button_title
        pos_hint: {"center_x": .5, "center_y": .3}
        size_hint: 0.2, 0.15
        # not just root bc we will define this function within the main.py
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .85

