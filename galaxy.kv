#: import menu menu

MainWidget:

<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: "images/bg1.jpg" 
    menu_widget: menu_widget
    # the below will work because of BINDING, when setting up a value like this, it will automatically
    # update the property
    perspective_point_x: self.width/2
    perspective_point_y: self.height*0.75
    MenuWidget:
        id: menu_widget
    # Displays Label on top of the Menu
    Label:
        text: root.score_txt
        font_size: dp(20)
        font_name: "fonts/Eurostile.ttf"
        size_hint: .18, .18
        pos_hint: {"x":0, "top": 1}
